<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cpu1"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="42dp"
            android:layout_weight="1"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/iv_me"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_cpu1"
            android:layout_weight="1"
            android:scaleType="centerInside" />

        <Button
            android:id="@+id/b_rock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/b_scissor"
            android:layout_toStartOf="@+id/b_scissor"
            android:background="@drawable/list"
            android:text="ROCK"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/b_papper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/b_scissor"
            android:layout_alignBottom="@+id/b_scissor"
            android:layout_toEndOf="@+id/b_scissor"
            android:layout_toRightOf="@+id/b_scissor"
            android:background="@drawable/list"
            android:textColor="#FFFFFF"
            android:text="PAPPER" />

        <Button
            android:id="@+id/b_scissor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/b_rock"
            android:layout_alignBottom="@+id/b_rock"
            android:layout_centerHorizontal="true"
            android:background="@drawable/list"
            android:textColor="#FFFFFF"
            android:text="SCISSOR" />
    </RelativeLayout>


</RelativeLayout>